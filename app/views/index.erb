<div class="container">

  <div class="well text-center">
    <div class="row">
        <a href="/"><h1 id="title"><strong>CONFIDANT</strong></h1></a>    
        
        <div class="btn-group">
          <button class="btn btn-primary" id="list">
            <i class="fa fa-list"></i> List All
          </button>    
          <button class="btn btn-primary" id="newSearch">
            <i class="fa fa-search"></i> Search
          </button>
          <button class="btn btn-primary" id="addNew">
            <i class="fa fa-plus-circle"></i> Add New
          </button>    
        </div>
    </div>

    <hr/>

    <div class="row searchForm">
      <div class="col-md-6 col-md-offset-3">

        <div class="input-group">
          <input type="text" class="form-control" id="search" placeholder="Search..."/>
          <span class="input-group-btn">
            <button class="btn btn-default" id="find" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
        <div id="errorMsg"></div>      

      </div>
    </div>

    <div class="row addForm">
      <form class="form-inline" id="newContactForm">
        <div class="form-group">
          <label class="sr-only" for="firstName">First Name</label>
          <input type="text" class="form-control" id="firstName" placeholder="first name"/>
        </div>
        <div class="form-group">
          <label class="sr-only" for="lastName">Last Name</label>
          <input type="text" class="form-control" id="lastName" placeholder="last name"/>
        </div>
        <div class="form-group">
          <label class="sr-only" for="email">Email Address</label>
          <input type="email" class="form-control" id="email" placeholder="email"/>
        </div>
        <div class="form-group">
          <label class="sr-only" for="phoneNumber">Phone Number</label>
          <input type="text" class="form-control" id="phoneNumber" placeholder="phone number"/>
        </div>
        <button type="submit" class="btn btn-default" id="add"><i class="fa fa-plus"></i></button>   
      </form>
    </div>

  </div>

  <div class="well">

    <div class="row">
      <div class="table-responsive">
        <table class="table" id="friends">
          <thead>
            <tr>
              <th>FRIENDS</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Numbers</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody>
            <!-- data goes here -->
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>